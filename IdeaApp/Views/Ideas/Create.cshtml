@model IdeaViewModel

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Ideas" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Idea Name:</label>
                <input asp-for="Name" class="form-control" type="text" placeholder="Use a few words to give your idea a name" required/>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="form-label">Idea Content</label>
                <textarea asp-for="Content" class="form-control" type="text" placeholder="Explain your idea" required></textarea>
            </div>
            <div class="buttons">
                <a href="@Url.Action("Index", "Ideas")" class="btn btn-secondary">Back</a>
                <button type="submit" class="btn btn-success">Save Idea</button>
            </div>
        </form>
    </div>
</div>