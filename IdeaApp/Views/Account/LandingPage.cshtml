@{
    ViewData["Title"] = "Landing Page";
}
<style>.navbar {display: none}</style>
<div class="welcome-message" >
    <h1>Welcome To IdeaHub</h1><br/>
    <h3>Centralize your ideas and track their progress</h3>
</div>
<div class="registration-buttons">
    <form method="post" asp-action="LandingPage">
        <button type="submit" class="btn btn-primary" name="action" value="sign-up">Create Account</button>
        <p>Already Have One?</p>
        <button type="submit" class="btn btn-secondary" name="action" value="log-in">Log In</button>
    </form>
</div>
