@model CreateRoleViewModel

@{ViewData["Title"] = "Create New Role";}

<div class="component">
    <div class="row">
        <form asp-asp-controller="Admin" asp-action="CreateRole" method="post" class="mt-3">
            <!--show any errors on screen-->
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="roleInput">Role</label>
                <input id="roleInput" asp-for="RoleName" type="text" class="form-control" placeholder="Input A Role">
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top:auto 3px">Create Role</button>
        </form>
</div>

